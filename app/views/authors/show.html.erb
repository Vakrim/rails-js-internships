<h1><%= @author.full_name %></h1>


<p>
  <%= "Aged: #{@author.age}" %>
  <hr/>
  Created at: <%= @author.created_at %>
  Updated at: <%= @author.updated_at %>
</p>


<h2>Posts</h2>
<% if @posts.any? %>
  <table>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post_path(post.id) %></td>
      </tr>
    <% end %>
  <table>
<% end %>
<%= link_to 'Back', authors_path %>