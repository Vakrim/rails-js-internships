<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @comment do |f| %>
  <%= f.label :commentator_id %>
  <%= f.number_field :commentator_id %>
  <br/>

  <%= f.label :content %>
  <%= f.text_area :content, size: '24x6' %>
  <br/>

  <%= f.hidden_field(:post_id, value: locals[:post_id]) %>

  <%= f.submit %> 
<% end %>